
include ../Makefile.settings

ALL = msa realigner

all: $(ALL)

install: all
	$(INSTALL_PROGRAM) -m 0755 $(ALL) $(install_bin)

clean:
	rm -rf $(ALL) *.dSYM

msa: Makefile msa_main.c msa.h msa.c $(PATH_LIB)/pass.h $(PATH_LIB)/pass.c $(PATH_DALIGN)/align.c $(PATH_DALIGN)/align.h $(PATH_DB)/DB.c $(PATH_DB)/DB.h $(PATH_DB)/QV.c
	$(CC) $(CFLAGS) -o msa msa.c msa_main.c $(PATH_LIB)/pass.c $(PATH_DALIGN)/align.c $(PATH_DB)/DB.c $(PATH_DB)/QV.c -lpthread $(CLIBS)

realigner: redriver.c realigner.c realigner.h $(PATH_DALIGN)/align.h
	$(CC) $(CFLAGS) -o realigner redriver.c realigner.c $(CLIBS)

